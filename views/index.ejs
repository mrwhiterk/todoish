<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Todoish</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://kit.fontawesome.com/3a05e85fdd.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <h1>Todoish</h1>
      
    </header>
    <form action="/" method="POST">
      <label
        >
        <input type="text" id="todoInput" name="body" placeholder="enter new todo"
      />
      </label>
      
      <input class="btn btn-success" id="addButton" type="submit" value="Add"/>

    </form>

    <ul class="todoList">
      <% todos.forEach( todo => { %>
        <li>
          <% if (todo.complete) { %>
            <p class="completed todo">
              <%= todo.body %>
            </p>
            <h6 class="completed" id='date'>
              <%= todo.date %>
            </h6>
          <% } else { %>
            <p class='todo'>
              <%= todo.body %>
              <input type='hidden' id='todoId' value='<%= todo._id %>' />
            </p>
            <h6 id='date'>
              <%= todo.date %>
            </h6>
          <% } %>
          <span>
          <% if (todo.complete) { %>

            <form action="/updateComplete/<%= todo._id %>?_method=put" method="POST">
              <button type='submit' class='complete'>
                <i class="fas fa-eraser"></i>
              </button>
            </form>
          <% } else { %>
            <form action="/updateComplete/<%= todo._id %>?_method=put" method="POST">
              <button type='submit' class='complete'>
                <i class="fas fa-check-square"></i>
              </button>
            </form>
          <% } %>
            <form action="/<%= todo._id %>?_method=delete" method="POST">
              <button type='submit' class="deleteBtn">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </span>
        </li>
      <% }); %>
      

    </ul>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
