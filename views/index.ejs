<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Todoish</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <h1>Todoish</h1>
    </header>
    <form action="/" method="POST">
      <label
        ><input type="text" id="todoInput" name="body" placeholder="enter new todo"
      /></label>
      
      <input id="addButton" type="submit" />

    </form>

    <ul class="todoList">
      <% todos.forEach( todo => { %>
        <li>
          <p id='todo'>
            <%= todo.body %>
          </p>
          <h6 id='date'>
            <%= todo.date %>
          </h6>
          
          <span>
            <form action="/<%= todo._id %>?_method=delete" method="POST">
              <button type='submit' class="deleteBtn">
                delete
              </button>
            </form>
            <button class='complete'>
              complete
            </button>
          </span>
        </li>
      <% }); %>
      

    </ul>
    <script src="/js/main.js"></script>
  </body>
</html>
